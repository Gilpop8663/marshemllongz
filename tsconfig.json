{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@prisma/*": ["./prisma/*"],
      "@recoil/*": ["./recoil/*"],
      "@hooks/*": ["./hooks/*"],
      "@libs/*": ["./libs/*"],
      "@pages/*": ["./pages/*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@type/*": ["./types/*"],
      "@assets/*": ["./assets/*"],
      "@styles/*": ["./styles/*"],
      "@backend/*": ["./backend/*"],
      "@tests/*": ["./__tests__/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "tailwind.config.js"],
  "exclude": ["node_modules"]
}
